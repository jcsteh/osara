	CONTROL "Report &FX when moving to tracks/takes", ID_CONFIG_REPORT_FX, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 10, 26, 140, 14
	CONTROL "Report &transport state (play, record, etc.)", ID_CONFIG_REPORT_TRANSPORT, "Button", BS_AUTOCHECKBOX | WS_TABSTOP, 10, 46, 140, 14
	DEFPUSHBUTTON "&OK", IDOK, 10, 66, 30, 14
	PUSHBUTTON "&Cancel", IDCANCEL, 110, 66, 40, 14
END
